{
  "info": {
    "name": "cc-platform (Gateway + Eureka + Config + Async Export + Audit Logs)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (USER)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"role\": \"USER\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200/201\", function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", json.accessToken);",
                  "pm.test(\"Token saved\", function(){ pm.expect(pm.collectionVariables.get(\"token\")).to.not.be.empty; });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Async Export (Audit logs + S3)",
      "item": [
        {
          "name": "Create export job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/exports?fromDate=2025-01-01&toDate=2025-01-31&status=SUCCESS",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "exports"
              ],
              "query": [
                {
                  "key": "fromDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "toDate",
                  "value": "2025-01-31"
                },
                {
                  "key": "status",
                  "value": "SUCCESS"
                }
              ]
            }
          },
          "description": "Creates an async export job. Worker will generate CSV in pages and upload to S3.",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"exportJobId\", json.jobId);",
                  "pm.test(\"Job created\", function(){ pm.expect(json.jobId).to.be.a(\"number\"); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Get export job status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/exports/{{exportJobId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "exports",
                "{{exportJobId}}"
              ]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status OK\", function(){ pm.expect(pm.response.code).to.eql(200); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Download export CSV",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/exports/{{exportJobId}}/download",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "exports",
                "{{exportJobId}}",
                "download"
              ]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          },
          "description": "Streams the CSV from S3 back to the client (download)."
        }
      ]
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"demo@example.com\",\n  \"password\": \"Password123\"\n}"
        }
      }
    },
    {
      "name": "Account - Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/account/me",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "account",
            "me"
          ]
        }
      }
    },
    {
      "name": "Saga - Debit (simulate rollback)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/saga/debit",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "saga",
            "debit"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cardId\": 1,\n  \"amountYen\": 5000,\n  \"merchant\": \"Amazon\",\n  \"category\": \"ECOMMERCE\",\n  \"simulateFailureAfterCharge\": true\n}"
        }
      }
    },
    {
      "name": "Transactions - Summary",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/transactions/summary",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "transactions",
            "summary"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "exportJobId",
      "value": ""
    }
  ]
}